{
  "name": "pretty-logs",
  "version": "0.1.7",
  "description": "Welcome to pretty-logs.  A logging tool to help developers create more informative logs.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tkjone/pretty-logs"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "logging",
    "logs",
    "pretty"
  ],
  "bugs": {
    "url": "https://github.com/tkjone/pretty-logs/issues"
  },
  "homepage": "https://github.com/tkjone/pretty-logs#readme",
  "author": "tkjone <tm.mattacchione@gmail.com> (http://thomasmattacchione.com)",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack --env=production --config=./tools/webpack/webpack.config.js -p",
    "precommit": "npm run validate",
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "report-coverage": "cat ./tools/jest/coverage-reports/lcov.info | codecov",
    "validate": "npm-run-all --parallel format test:coverage",
    "generate-changelog": "github-changes -o tkjone -r pretty-logs -n ${npm_package_version} -a",
    "release": "npm publish"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "codecov": "^2.1.0",
    "husky": "^0.13.3",
    "jest-cli": "^19.0.2",
    "lint-staged": "^3.4.1",
    "npm-run-all": "^4.0.2",
    "prettier-eslint-cli": "^3.4.2",
    "regenerator-runtime": "^0.10.5",
    "rimraf": "^2.6.1",
    "webpack": "^2.4.1",
    "webpack-merge": "^4.1.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {}
  },
  "jest": {
    "coverageDirectory": "./tools/jest/coverage-reports",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  }
}
